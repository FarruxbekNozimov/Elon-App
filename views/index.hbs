<main>
	<form action="/" method="GET" class="py-5 text-center container">
		<div class="row py-lg-5">
			<div class="col-lg-10 col-md-8 mx-auto d-flex">
				<div class="form-floating">
					<input
						type="date"
						class="form-control"
						id="floatingInput"
						placeholder="name@example.com"
						name="date"
					/>
					<label for="floatingInput">Sanani tanlang</label>
				</div>
				<select
					name="route"
					class="form-select"
					aria-label="Default select example"
				>
					<option value="">Bo'lim tanlang</option>
					{{#each posts}}
						<option value="{{route}}">{{route}}</option>
					{{/each}}
				</select>
				<select
					name="initRoute"
					class="form-select"
					aria-label="Default select example"
				>
					<option value="">Ichki bo'lim</option>
					{{#each posts}}
						<option value="{{initRoute}}">{{initRoute}}</option>
					{{/each}}
				</select>
				<select
					class="form-select"
					aria-label="Default select example"
					name="isOnline"
				>
					<option value="">Online/Offline</option>
					<option value="on">Online</option>
					<option value="off">Offline</option>
				</select>
				<select
					name="ismSharif"
					class="form-select"
					aria-label="Default select example"
				>
					<option value="">Ismi Familya</option>
					{{#each posts}}
						<option value="{{ismSharif}}">{{ismSharif}}</option>
					{{/each}}
				</select>
				<button type="submit" class="btn btn-primary">IZLASH</button>
			</div>
		</div>
	</form>

	<div class="album py-5 bg-light">
		<div class="container">

			<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
				{{#each filters}}
					{{#if tasdiqlangan}}
						<div class="col">
							<div class="card shadow-sm">
								<img src="/img/{{postPhoto}}" alt="" height="300px" />
								<div class="card-body">
									<h4 class="card-text">{{postTitle}}</h4>
									<div class="d-flex">
										<div class="row ms-2">
											<span>👤 {{ismSharif}}</span>
											<span>📅 {{date}}</span>
											<span>🌐 {{isOnline}}</span>
										</div>
										<div class="row">
											<span>📈
												{{#if yuridikProfessiya}}
													{{yuridikProfessiya}}
												{{else}}
													{{jismoniyProfessiya}}
												{{/if}}</span>
											<span>⏰ {{time}}</span>
											<span>👁 250</span>
										</div>
									</div>
								</div>
							</div>
						</div>
					{{/if}}
				{{/each}}
			</div>
		</div>
	</div>

</main>